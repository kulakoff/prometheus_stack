global:
  scrape_interval: 15s

scrape_configs:
  # 'node-exporter'
  - job_name: 'node'
    scrape_interval: 5s
    static_configs:
      - targets: ['node-exporter:9100']

#  'blackbox-icmp'
  - job_name: 'blackbox-icmp'
    scrape_interval: 30s
    metrics_path: /probe
    params:
      module: [ icmp ]
    relabel_configs:
      - source_labels: [ __address__ ]
        target_label: __param_target
      - source_labels: [ __param_target ]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115
#    file_sd_configs:
#      - files:
#          - /etc/prometheus/targets.d/blackbox-icmp.yml
    http_sd_configs:
      - url: '${RBT_SERVICE_DISCOVERY_BASE_URI}/internal/prometheus/targets_icmp'
        refresh_interval: 5m
        bearer_token: '${RBT_SERVICE_DISCOVERY_TOKEN}'

#  'blackbox-http'
  - job_name: 'blackbox-http'
    scrape_interval: 30s
    metrics_path: /probe
    params:
      module: [ http_2xx ]
    relabel_configs:
      - source_labels: [ __address__ ]
        target_label: __param_target
      - source_labels: [ __param_target ]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115
    http_sd_configs:
      - url: '${RBT_SERVICE_DISCOVERY_BASE_URI}/internal/prometheus/targets_http'
        refresh_interval: 5m
        bearer_token: '${RBT_SERVICE_DISCOVERY_TOKEN}'

